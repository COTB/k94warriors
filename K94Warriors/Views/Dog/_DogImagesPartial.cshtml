@model IList<K94Warriors.Models.DogImage>

<div id="dog-image-carousel" class="carousel slide" style="position: relative;">
    <!-- Carousel items -->
    @if (Model.Count > 0)
    {
        <div class="carousel-inner">
            @if (Model.Count > 1)
            {
                for (var i = 0; i < Model.Count; i++)
                {
                    var image = Model[i];
                <div class="item @(i == 0 ? "active" : "")">
                    <img class="thumbnail" style="width: 100%;" src="@Url.Action("ImageForBlobKey", new { blobKey = image.BlobKey, mimeType = image.MimeType, height = 180, width = 340 })"/>
                    <button id="button-edit-images" data-toggle="modal" class="btn btn-sm"><i class="icon-camera"></i></button>
                </div>
                }
                <!-- Carousel nav -->
                <a class="carousel-control left" href="#dog-image-carousel" data-slide="prev">‹</a>
                <a class="carousel-control right" href="#dog-image-carousel" data-slide="next">›</a>
            }
            else
            {
                var image = Model[0];
                <img class="thumbnail" style="width: 100%;" src="@Url.Action("ImageForBlobKey", new { blobKey = image.BlobKey, mimeType = image.MimeType, height = 180, width = 340 })"/>
                <button id="button-edit-images" data-toggle="modal" class="btn btn-sm"><i class="icon-camera"></i></button>
            }

        </div>
    }
    else
    {
        <div class="item active">
            <img class="thumbnail" src="http://placehold.it/340x180" />
            <button id="button-edit-images" data-toggle="modal" class="btn btn-sm"><i class="icon-camera"></i></button>
        </div>
    }

</div>

