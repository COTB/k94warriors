@{
    ViewBag.Title = "Dogs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Diagnostics.Eventing.Reader
@model IEnumerable<K94Warriors.Models.DogProfile>

<div class="col col-lg-12">
    <h2>Dogs</h2>
    <table class="table table-bordered">

        <thead>
            <tr>
                <th class="col col-lg-3">Dog Name</th>
                <th class="col col-lg-2">Breed</th>
                <th class="col col-lg-2">Age</th>
                <th class="col col-lg-3">Assigned Warrior</th>
                <th class="col col-lg-2">Location</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dog in Model)
            {
                <tr>
                    <td class="col col-lg-3"><a href="/dog/readdog/@dog.ProfileID">@dog.Name</a></td>
                    <td class="col col-lg-2">@dog.Breed</td>
                    <td class="col col-lg-2">@dog.Age</td>
                    <td class="col col-lg-3">@if(dog.WarriorInfo != null) 
                                             {@dog.WarriorInfo.FirstName  @dog.WarriorInfo.LastName}
                                             else
                                             {
                                                 <text>
                                                     Not Assigned to Warrior</text>
                                             }</td>
                    <td class="col col-lg-2">@dog.Location.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>


