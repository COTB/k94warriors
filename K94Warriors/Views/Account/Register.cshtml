@model K94Warriors.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}
<link href="~/Content/register.css" rel="stylesheet" />
<div class="well">
    <h1>@ViewBag.Title.</h1>
    <div>Fill out the form below to gain access.</div>
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

<article class="form-horizontal">

<!-- Text input-->
<div class="control-group">
  <label class="control-label">Email Address</label>
  <div class="controls">
    <input id="UserName" name="UserName" type="text" placeholder="email@address.com" class="input-xlarge" required="required" />    
  </div>
</div>

<!-- Password input-->
<div class="control-group">
  <label class="control-label">Password</label>
  <div class="controls">
    <input id="password" name="password" pattern=".{8,}" type="password" placeholder="password" class="input-xlarge" required="required" />
    <p class="help-block">At least 8 characters</p>
  </div>
</div>

<!-- ConfirmPassword input-->
<div class="control-group">
  <label class="control-label">Confirm</label>
  <div class="controls">
    <input id="confirmPassword" name="confirmPassword" type="password" placeholder="password" class="input-xlarge" required="required" />
    <p class="help-block">re-type your password</p>
  </div>
</div>

    <button class="btn btn-primary">Save</button>
</article>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
