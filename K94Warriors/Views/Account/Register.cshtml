@model K94Warriors.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}


<div class="col col-lg-12">
    <div class="well">
        <h1>@ViewBag.Title.</h1>
        <div>Fill out the form below to gain access.</div>
    </div>


    @using (Html.BeginForm("Register", "Account", new
        {
            ViewBag.ReturnUrl
        }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()


        <div class="form-group">
            <label for="UserName">Email address</label>
            <input type="email" class="form-control input-lg" name="UserName" placeholder="Enter email">
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" class="form-control input-lg" name="Password" placeholder="Password">
        </div>
        <div class="form-group">
            <label for="Password">Confirm Password</label>
            <input type="password" class="form-control input-lg" name="ConfirmPassword" placeholder="Password">
        </div>

        <button type="submit" class="btn btn-default">Submit</button>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}