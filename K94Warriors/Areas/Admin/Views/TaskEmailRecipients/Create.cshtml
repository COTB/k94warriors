@using K94Warriors.Core.HtmlHelperExtensions
@model K94Warriors.Models.TaskEmailRecipient
@{
    ViewBag.Title = "Create Task Email Recipient";
}

<h2>Create New Task Email Recipient</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.TaskType)
        @Html.EnumDropDownListFor(model => model.TaskType, "Select a task type...")
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.EmailAddress)
        @Html.K9TextBoxFor(model => model.EmailAddress, "Recipient Email Address")
        @Html.ValidationMessageFor(model => model.EmailAddress)
    </div>

    <p>
        <input class="btn" type="submit" value="Create Task Email Recipient" />
    </p>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
