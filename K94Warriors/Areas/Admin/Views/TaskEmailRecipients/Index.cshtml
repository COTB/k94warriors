@using K94Warriors.Enums
@model IEnumerable<K94Warriors.Models.TaskEmailRecipient>

@{
    ViewBag.Title = "Task Email Recipients";
}

<p class="pull-right">
    <a href="/Admin/TaskEmailRecipients/Create" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Add New Task Email Recipient</a>
</p>
<h4>Task Email Recipients</h4>
<hr />
<table class="table">
    <thead>
        <tr>
            <th class="col col-lg-3">Task Type</th>
            <th class="col col-lg-3">Recipient</th>
            <th class="col col-lg-6">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col col-lg-3">
                    <a href="/Admin/TaskEmailRecipients/Edit/@item.TaskEmailRecipientID">@Enum.GetName(typeof(TaskTypeEnum), @item.TaskType)</a>
                </td>
                <td class="col col-lg-3">
                    <a href="/Admin/TaskEmailRecipients/Edit/@item.TaskEmailRecipientID">@item.EmailAddress</a>
                </td>

                <td class="col col-lg-6">
                    <a href="/Admin/TaskEmailRecipients/Edit/@item.TaskEmailRecipientID"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a href="/Admin/TaskEmailRecipients/Delete/@item.TaskEmailRecipientID" onclick="return confirm('Are you sure you want to delete this?')"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>