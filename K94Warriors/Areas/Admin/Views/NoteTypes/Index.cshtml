@model IEnumerable<K94Warriors.Models.NoteType>

@{
    ViewBag.Title = "Note Types";
}


<p class="pull-right">
    <a href="/Admin/NoteTypes/Create" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Add New Note Type</a>
</p>
<h4>Note Types</h4>
<hr />
<table class="table">
    <tr>
        <th class="col col-lg-3">Name</th>
        <th class="col col-lg-9">Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="col col-lg-3">
            <a href="/Admin/NoteTypes/Edit/@item.ID">@item.Name</a>
        </td>      
        <td class="col col-lg-6">
            <a href="/Admin/NoteTypes/Edit/@item.ID"><i class="glyphicon glyphicon-pencil"></i></a>
            <a href="/Admin/NoteTypes/Delete/@item.ID" onclick="return confirm('Are you sure you want to delete this? It will also permanently delete all notes using this note type.')"><i class="glyphicon glyphicon-trash"></i></a>
        </td>
    </tr>
}

</table>
