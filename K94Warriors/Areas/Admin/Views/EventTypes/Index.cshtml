@model IEnumerable<K94Warriors.Models.EventType>

@{
    ViewBag.Title = "Event Types";
}


<p class="pull-right">
    <a href="/Admin/EventTypes/Create" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Add New Event Type</a>
</p>
<h4>Event Types</h4>
<hr />
<table class="table">
    <tr>
        <th class="col col-lg-3">Name</th>
        <th class="col col-lg-9">Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="col col-lg-3">
            <a href="/Admin/EventTypes/Edit/@item.ID">@item.Name</a>
        </td>      
        <td class="col col-lg-6">
            <a href="/Admin/EventTypes/Edit/@item.ID"><i class="glyphicon glyphicon-pencil"></i></a>
            <a href="/Admin/EventTypes/Delete/@item.ID" onclick="return confirm('Are you sure you want to delete this? It will also permanently delete all events using this event type.')"><i class="glyphicon glyphicon-trash"></i></a>
        </td>
    </tr>
}

</table>
